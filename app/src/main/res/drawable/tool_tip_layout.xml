<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="-50%"
            android:pivotY="0%"
            android:toDegrees="90">
            <shape android:shape="rectangle">
                <size
                    android:width="15dp"
                    android:height="30dp" />
                <solid android:color="#20262a"/>
            </shape>
        </rotate>
    </item>

</layer-list>